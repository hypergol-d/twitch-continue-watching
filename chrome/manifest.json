{
  "name": "Twitch Continue Watching",
  "version": "1.0.0",
  "description": "This unofficial extension brings the Continue Watching mobile feature to the desktop.",
  "homepage_url": "https://github.com/stefansundin/twitch-continue-watching",
  "author": "Stefan Sundin",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "options_ui": {
    "page": "popup.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Open Twitch Continue Watching",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://*.twitch.tv/",
    "cookies"
  ],
  "manifest_version": 2
}
